#include <iostream>

using namespace std;
int main() {
	float x, y, input;

cout<<"Press  '1' for addition. \n"; 
cout<<"Press  '2' for multiplication. \n"; 
cout<<"Press  '3' for division. \n"; 
cout<<"Press  '4' for subtraction. \n";
cout<<"Press  '5' for finding the area of a triangle.";
cin>>input;

if (input == 1,2,3,4,5)
	cout<<"Please enter your first value: ";
	cin>>x;
	cout<<"Please enter your second value: ";
	cin>>y;
if (input == 1) //addition
	cout<<x + y;
else if (input == 2) //multiplication
	cout<<x * y;
else if (input == 3) //division
	cout<<x / y;
else if (input == 4) //subtraction
	cout<<x - y;
else if (input == 5) //area of a triangle
	cout<< .5 * x * y; 

}




